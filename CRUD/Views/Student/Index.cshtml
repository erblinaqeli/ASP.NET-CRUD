@model IEnumerable<CRUD.Models.Student>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Students List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Register new Student</a>
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                             Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Major
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                    <tr>
                        <td width="10%">@student.Name</td>
                        <td width="10%">@student.Lastname</td>
                        <td width="20%">@student.Email</td>
                        <td width="20%">@student.Major</td>
                        <td width="40%">
                            <div class="w-100 btn-group"role="group">
                                <a asp-controller="Student" asp-action="Update" asp-route-id="@student.Id" class="btn btn-primary mx-1" >Update</a>
                                <a asp-controller="Student" asp-action="DeletePost" asp-route-id="@student.Id" class=" btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No items created yet</p>
        }

    </div>